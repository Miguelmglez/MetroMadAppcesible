<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maps"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.miguel.urjctfgappmetromad.MapsActivity">
    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:text="@string/button_route_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findRouteButton"
        android:layout_weight="1"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button"
        android:background="@android:color/holo_green_light"
        android:visibility="visible"
        android:onClick="routes"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_compass"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="46dp"
        android:id="@+id/locationButton"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_above="@+id/findRouteButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
